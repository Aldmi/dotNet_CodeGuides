<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MammaMiaDev.Views.HomePageView">
   
    <ScrollViewer>
        <StackPanel Margin="20">
            <TextBlock Margin="0 20" FontSize="20" FontWeight="Bold">Grids </TextBlock>
            
            <TextBlock Margin="0 20" FontSize="15" FontWeight="Bold">Standard grid </TextBlock>
            
            <Grid RowDefinitions="2*,*"
                  ColumnDefinitions="*,*"
                  ShowGridLines="True"
                  Height="300"
                  Width="600"
                  >
                <Rectangle Grid.Row="0" Grid.Column="0" Fill="Aquamarine" />
                <Rectangle Grid.Row="0" Grid.Column="1" Fill="Yellow" />
                <Rectangle Grid.Row="1" Grid.Column="0" Fill="DarkRed" />
                <Rectangle Grid.Row="1" Grid.Column="1" Fill="DarkBlue"/>
            </Grid>
            
        </StackPanel>
    </ScrollViewer>
    
</UserControl>
